@{
    ViewBag.Title = "Add/Update Role";
}

<div class="panel panel-default">
    <div class="panel-body">
        <form method="get" action="/" class="form-horizontal">
            <div>

                <fieldset>
                    <legend>Role Information</legend>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control form-control-rounded" />
                        </div>
                    </div>
                </fieldset>

                <fieldset>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control form-control-rounded" />
                        </div>
                    </div>
                </fieldset>

            </div>

            <button type="button" class="btn btn-labeled btn-default align-right" onclick="window.location.href = '/RolesAdmin/Index'">
                <span class="btn-label">
                    <i class="fa fa-arrow-left"></i>
                </span>Back
            </button>

            <button type="button" class="btn btn-labeled btn-default align-right" onclick="window.location.href = '/ServiceProvider/Index'">
                <span class="btn-label">
                    <i class="fa fa-check"></i>
                </span>Save
            </button>

        </form>
    </div>
</div>

