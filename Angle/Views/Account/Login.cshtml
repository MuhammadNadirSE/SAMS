@using TMD.Models.IdentityModels.ViewModels
@model TMD.Models.IdentityModels.ViewModels.LoginViewModel


@{
    Layout = "~/Views/Shared/_AngleLoginLayout.cshtml";
    ViewBag.Title = "Log in";
}

<div class="block-center mt-xl wd-xl">
    <!-- START panel-->
    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center">
            <a href="#">
                <img src="~/Content/Images/logo.png" alt="Image" class="block-center img-rounded" />
            </a>
        </div>
        <div class="panel-body">
            <p class="text-center pv">SIGN IN TO CONTINUE.</p>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "mb-lg", role = "form" })) //form-horizontal
            {
                <div class="form-group has-feedback">
                    @*<input id="exampleInputEmail1" type="email" placeholder="Enter email" autocomplete="off" required="required" class="form-control" />*@
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter Username", autocomplete = "off", required = "required" })
                    <span class="fa fa-pencil form-control-feedback text-muted"></span>
                </div>
                <div class="form-group has-feedback">
                    @*<input id="exampleInputPassword1" type="password" placeholder="Password" required="required" class="form-control" />*@
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password", autocomplete = "off", required = "required" })
                    <span class="fa fa-lock form-control-feedback text-muted"></span>
                </div>
                <div class="form-group has-feedback">
                    <div class="checkbox c-checkbox pull-left mt0">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <span class="fa fa-check"></span>Remember Me
                        </label>
                    </div>
                    <div class="pull-right">
                        <a href="@Url.Action("ForgotPassword", "Account")" class="text-muted">Forgot your password?</a>
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-primary mt-lg" @*onclick="window.location.href = '/Dashboard/Dashboard_v1'"*@>Login</button>
            }
            @*<p class="pt-lg text-center">Need to Signup?</p><a href="@Url.Action("Register", "Account")" class="btn btn-block btn-default">Register Now</a>*@
        </div>
    </div>
    <!-- END panel-->
</div>