@using Angle
<!-- START Sidebar (left)-->
<div class="aside-inner">
    <nav class="sidebar" data-sidebar-anyclick-close="">
        <!-- START sidebar nav-->
        <ul class="nav">
            <!-- START user info-->
            <li class="has-user-block">
                <div id="user-block" class="collapse">
                    <div class="item user-block">
                        <!-- User picture-->
                        <div class="user-block-picture">
                            <div class="user-block-status">
                                <img src="~/Content/Images/user/02.jpg" alt="Avatar" width="60" height="60" class="img-thumbnail img-circle" />
                                <div class="circle circle-success circle-lg"></div>
                            </div>
                        </div>
                        <!-- Name and Job-->
                        <div class="user-block-info">
                            <span class="user-block-name">Hello, Mike</span>
                            <span class="user-block-role">Designer</span>
                        </div>
                    </div>
                </div>
            </li>
            <!-- END user info-->
            <!-- Iterates over all sidebar items-->
            <li class="@Html.isActive(controller: "Dashboard")">
                <a href="#dashboard" title="Dashboard" data-toggle="collapse">
                    @*<div class="label label-info pull-right">3</div>*@
                    <em class="icon-speedometer"></em>
                    <span data-localize="sidebar.nav.DASHBOARD">Dashboard</span>
                </a>
                <ul id="dashboard" class="nav sidebar-subnav collapse">
                    <li class="@Html.isActive("Dashboard", "Dashboard_v1")">
                        <a href="@Url.Action("Dashboard_v1", "Dashboard")" title="Dashboard">
                            <span>Dashboard</span>
                        </a>
                    </li>
                    @*<li class="@Html.isActive("Dashboard", "Dashboard_v2")">
                        <a href="@Url.Action("Dashboard_v2", "Dashboard")" title="Dashboard 2">
                            <span>Dashboard 2</span>
                        </a>
                    </li>
                    <li class="@Html.isActive("Dashboard", "Dashboard_v3")">
                        <a href="@Url.Action("Dashboard_v3", "Dashboard")" title="Dashboard 3">
                            <span>Dashboard 3</span>
                        </a>
                    </li>*@
                    <li class="@Html.isActive("Dashboard", "Charts")">
                        <a href="@Url.Action("Charts", "Dashboard")" title="Charts">
                            <span>Charts</span>
                        </a>
                    </li>
                </ul>
            </li>
            
            <li class="@Html.isActive(controller: "Client")">
                <a href="#client" title="User Management" data-toggle="collapse">
                    @*<div class="label label-info pull-right">3</div>*@
                    <em class="icon-wrench"></em>
                    <span data-localize="sidebar.nav.Account">Configuration</span>
                </a>
                <ul id="client" class="nav sidebar-subnav collapse">
                    <li class="@Html.isActive("Client", "Index")">
                        <a href="@Url.Action("Index", "Client")" title="Clients">
                            <span>Clients</span>
                        </a>
                    </li>
                    <li class="@Html.isActive("ServiceProvider", "Index")">
                        <a href="@Url.Action("Index", "ServiceProvider")" title="Service Provider">
                            <span>Service Provider</span>
                        </a>
                    </li>
                    <li class="@Html.isActive("Client", "UploadData")">
                        <a href="@Url.Action("UploadData", "Client")" title="Manual Upload">
                            <span>Manual Upload</span>
                        </a>
                    </li>
                </ul>
            </li>
            
            <li class="@Html.isActive(controller: "Account")">
                <a href="#userMgt" title="User Management" data-toggle="collapse">
                    @*<div class="label label-info pull-right">3</div>*@
                    <em class="icon-user"></em>
                    <span data-localize="sidebar.nav.Account">User Management</span>
                </a>
                <ul id="userMgt" class="nav sidebar-subnav collapse">
                    <li class="@Html.isActive("Account", "Users")">
                        <a href="@Url.Action("Users", "Account")" title="Users">
                            <span>Users</span>
                        </a>
                    </li>
                    <li class="@Html.isActive("RolesAdmin", "Index")">
                        <a href="@Url.Action("Index", "RolesAdmin")" title="Roles">
                            <span>Roles</span>
                        </a>
                    </li>
                    
                    <li class="@Html.isActive("Account", "ChangePassword")">
                        <a href="@Url.Action("ChangePassword", "Account")" title="Change Password">
                            <span>Change Password</span>
                        </a>
                    </li>
                </ul>
            </li>

        </ul>
        <!-- END sidebar nav-->
    </nav>
</div>
<!-- END Sidebar (left)-->