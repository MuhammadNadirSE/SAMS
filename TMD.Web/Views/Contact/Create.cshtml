                $("#addressTable").children("tbody").children("tr").remove();
            }

            $('.remove').live("click", function () {
                var button = $(this);
                bootbox.confirm("After clicking OK, record will be removed.", function (result) {
                    if (!result) {
                        return;
                    }
                    button.parent().parent().remove();
                });
            });

            $(".saveSupervisor").click(function () {
                //validate fields
                if (!(ValidateFieldsByClass("mandatoryModal"))) {
                    return false;
                }
                var contactId = '@Model.Contact.ContactID';
                var country = $("#txtCountry").val();
                var city = $("#txtCity").val();
                var state = $("#txtState").val();
                var street = $("#txtStreet").val();
                var addline1 = $("#txtAddressLine1").val();
                var addline2 = $("#txtAddressLine2").val();

                $(this).closest(".modal").modal('hide');

                var index = $('#AddressTableBody tr:last').index() + 1;

            if (country !== "") {
                var indexCell = "<td style='display:none'>" +
                                "<input name='Addresses.Index' type='hidden' value='" + index + "' />" +
                                "<input name='Addresses[" + index + "].ContactID' id='Addresses_" + index + "__ContactID' type='hidden'  value='" + contactId + "'/>" +
                                "<input name='Addresses[" + index + "].AddressId' id='Addresses_" + index + "__AddressId' type='hidden' />" +
                                "</td>";

                //Addresses
                var html = ' <tr data-id=' + index + '>' +
                    indexCell +
                    '<td>' +
                    '<input id="Addresses_' + index + '__Country" name="Addresses[' + index + '].Country" value="' + country + '" type="text" class = "ProductTableColumn" readOnly = "readOnly"/>' +
                    '</td>' +
                    '<td>' +
                    '<input id="Addresses_' + index + '__State" name="Addresses[' + index + '].State" value="' + state + '" type="text" class="ProductTableColumn" readOnly = "readOnly"/>' +
                    '</td>' +
                     '<td>' +
