@model System.Collections.Generic.List<TMD.Web.ViewModels.Employee.EmployeeModel>
@{

    ViewBag.Title = "All Employees";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["MenuKey"] = 5;

}

<div class="portlet portletCustomHeight light bg-inverse">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-users font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo uppercase">Employees</span>
            <span class="caption-helper">All</span>
        </div>
        <div class="pull-right">
            <a href="@Url.Action("Create","Employees")" class="btn blue-madison"><i class="fa fa-plus"> Add New Employee</i></a>
        </div>
    </div>

    <div class="portlet-body form">
        <div class="form-body">
            <div class="row">
                <div class="portlet box red-sunglo">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-group"></i>Employee(s)
                        </div>
                    </div>
                    <div class="portlet-body flip-scroll">
                        <table class="table table-bordered table-striped table-condensed flip-content" id="EmployeeTable">
                            <thead class="flip-content">
                                <tr>
                                    <th>
                                        Full Name
                                    </th>
                                    <th>
                                        Cell #
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Designation
                                    </th>
                                    <th class="">
                                        Role
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var t in Model)
                                {

                                    <tr>
                                        <td><a href="@Url.Action("Create")/@t.EmployeeId">@t.FullName</a></td>
                                        <td>@t.CellNumber</td>
                                        <td>@t.Email</td>
                                        <td>@t.DesignationTitle</td>
                                        <td>@t.RoleTitle</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!--/span-->
        

        <!--/row-->
    </div>
</div>

</div>
<script>
    $(document).ready(function() {
        var oTable = $("#EmployeeTable").dataTable({
            "sPaginationType": "full_numbers",
            "iDisplayLength": 10,
            "bFilter": true,
            "bLengthChange": false,
        });
    });
</script>
