@model List<TMD.Web.Models.NotificationModel>
@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["MenuKey"] = 4;
    Session["SubMenuKey"] = 2;
}

<div class="portlet light bg-inverse formBodyRemoveSideSpace formBodyMinHeight">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-bulb font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo bold uppercase">Notifications</span>
        </div>
    </div>
    <div class="portlet box">
        <div class="portlet-body flip-scroll">
            <table id="dataTable" class="table table-bordered table-striped table-condensed flip-content">
                <thead class="flip-content">
                    <tr>
                        <th class="">Title</th>
                        <th class="">Description</th>
                        <th class="">Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(Html.ActionLink(item.Title, "Details"@*, new { id = item.CategoryId }, new { @class = item.MainCategoryId == null ? "" : "padding-left-10percent" })*@))</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedDate</td>
                            <td></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').dataTable({
            "sPaginationType": "full_numbers",
            "iDisplayLength": 10,
            "bFilter": true,
            "bLengthChange": false,
        });
    });
</script>