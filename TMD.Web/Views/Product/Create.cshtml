@model TMD.Web.ViewModels.Product.ProductViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["MenuKey"] = 8;
    Session["ParentMenu"] = 1;
}


@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.HiddenFor(x => x.Product.CreatedDate);
    @Html.HiddenFor(x => x.Product.CreatedBy);


    <div class="portlet box blue-hoki">
        <div class="portlet-title">
            <div class="tools">
                @*<a href="javascript:;" class="collapse">
                    </a>*@

                <button type="submit" class="btn btn-circle blue" onclick="return(ValidateFields(event));">Save</button>@*&& ValidateDropDown()*@
                <a href="~/Product/Index">
                    <button type="button" class="btn btn-circle default">Cancel</button>
                </a>
            </div>
            <div class="caption">
                <i class="fa fa-male"></i>Create/Update Product 
            </div>
        </div>

        <div class="portlet-body form formMinHeight500">
            <div class="container-fluid">
                @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Product.ProductID)
                    @Html.HiddenFor(m => m.Product.CreatedDate)
                    @Html.HiddenFor(m => m.Product.CreatedBy)



                <div class="form-group  margin-top-20 ">
                    @Html.LabelFor(m => m.Product.ProductName, new { @class = "col-md-3 control-label requiredLabel" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Product.ProductName, new { @class = "form-control input-circle mandatory", placeholder = "Product Name" })
                        @Html.ValidationMessageFor(x => x.Product.ProductName)

                    </div>
                </div>

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Product.ShortDescription, new { @class = "col-md-3 control-label requiredLabel" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.Product.ShortDescription, new { @class = "form-control input-circle mandatory", placeholder = "Short Description" })
                        @Html.ValidationMessageFor(x => x.Product.ShortDescription)
                    </div>
                </div>
                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Product.DetailDescription, new {@class = "col-md-3 control-label requiredLabel"})
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.Product.DetailDescription, new {@class = "form-control input-circle mandatory", placeholder = "Detail Description"})
                    </div>
                </div>
                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Product.Price, new {@class = "col-md-3 control-label requiredLabel"})
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Product.Price, new {@class = "form-control input-circle mandatory", placeholder = "Price"})
                        @Html.ValidationMessageFor(x => x.Product.Price)
                    </div>
                </div>
                <div class="form-group  margin-top-20 ">
                    <label class="col-md-3 control-label requiredLabel">Product Category</label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(x => x.Product.ProductCategoryID, new SelectList(Model.ProductCategories, "ProductCategoryID", "CatName", Model.Product.ProductCategoryID), "--Please Select--", new { @class = "form-control  input-circle " })
                    </div>
                </div>



            </div>

        </div>
        <script>
            function ValidateDropDown() {
                var value = $('#ProductCategoryModel_MainCategoryId option:selected').val();
                if (value == "" || value < 0)
                    return false;
                return true;
            }
        </script>
    </div>
}

